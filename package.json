{
  "private": true,
  "scripts": {
    "server": "nodemon server --ignore client --ignore sessions",
    "client": "http-server client",
    "deploy:client": "gh-pages -d client",
    "deploy:server": "git subtree push --prefix server heroku master",
    "test": "echo 'no tests'",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "standard | snazzy",
    "lint:css": "stylelint 'client/style/**/*.css'",
    "lint:html": "htmllint 'client/**/*.html'",
    "postinstall": "cd server && npm i"
  },
  "dependencies": {
    "htmllint-cli": "0.0.6",
    "http-server": "^0.11.1",
    "nodemon": "^1.17.2",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1",
    "stylelint": "^9.1.3",
    "stylelint-config-recommended": "^2.1.0"
  },
  "devDependencies": {
    "gh-pages": "^1.1.0"
  }
}
